
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>create</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        @using(Html.BeginForm())
            {
                <div class="form-horizontal">
                    <h4 style=" color:blue;font-weight:bold">Add new Employee</h4>
                    <hr />
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" name="Fullname" value="" class=" form-control" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" name="Gender" value="" class=" form-control" placeholder="enter gender(Nam/Nữ)" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" name="City" value="" class=" form-control" />
                    </div>
                    <div class="form-group">
                        <label>DeptID</label>
                        <input type="text" name="DeptId" value="" class=" form-control" />
                    </div>
                    <div class="form-group">
                       <div class="col-md-offset-2 col-md-10">
                           <input type="submit" name="name" value="Add Employee" class="btn btn-default" />
                       </div>
                    </div>
                    <div class="form-group">
                        <label style="color:red">@ViewBag.ThongBao</label>
                        
                    </div>
                    
                </div>
            }
    </div>
</body>
</html>
